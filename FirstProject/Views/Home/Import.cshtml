@{
    ViewData["Title"] = "Import Data";
}

<div class="container">
    <h2 class="mb-4">Import People Data</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <pre class="mb-0">@TempData["WarningMessage"]</pre>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Import Excel File</h4>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>File Requirements:</h5>
                <ul class="list-group">
                    <li class="list-group-item">Excel file format (.xlsx)</li>
                    <li class="list-group-item">First row must contain headers</li>
                    <li class="list-group-item">Columns must be in this order:
                        <ol class="mb-0 mt-2">
                            <li>Forename</li>
                            <li>Family Name</li>
                            <li>Gender</li>
                            <li>Year of Birth (numeric)</li>
                        </ol>
                    </li>
                </ul>
            </div>
            
            <form asp-controller="Home" asp-action="Import" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="file" class="form-label">Select Excel File</label>
                    <input type="file" class="form-control" id="file" name="file" accept=".xlsx" required />
                    <div class="form-text">Maximum file size: 10MB</div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Import Data
                </button>
            </form>
        </div>
    </div>
</div>