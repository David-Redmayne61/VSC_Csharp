@model FirstProject.Models.Person

@{
    ViewData["Title"] = "Edit Person";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4">Edit Person</h4>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Forename" class="form-label">Forename</label>
                            <input asp-for="Forename" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FamilyName" class="form-label">Family Name</label>
                            <input asp-for="FamilyName" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="PreferNotToSay">Prefer not to say</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="YearOfBirth" class="form-label">Year of Birth</label>
                            <input asp-for="YearOfBirth" 
                                   class="form-control" 
                                   type="text" 
                                   pattern="\d{4}"
                                   maxlength="4"
                                   placeholder="YYYY"
                                   oninput="this.value = this.value.replace(/[^\d]/g, '')"
                                   required />
                            <div class="invalid-feedback">
                                Please enter a valid 4-digit year between 1900 and 2025
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="ViewPeople" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('YearOfBirth').addEventListener('change', function() {
            const year = parseInt(this.value);
            if (year < 1900 || year > 2025) {
                this.classList.add('is-invalid');
                this.setCustomValidity('Year must be between 1900 and 2025');
            } else {
                this.classList.remove('is-invalid');
                this.setCustomValidity('');
            }
        });
    </script>
}