@{
    ViewData["Title"] = "First Project";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary mb-3">@ViewData["Title"]</h1>
        <p class="lead">@ViewData["Message"]</p>
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
        }
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="SubmitNames" method="post" 
                          onsubmit="return validateForm()">
                        <div class="form-group mb-4">
                            <label for="Forename" class="form-label fw-bold text-primary">Forename:</label>
                            <input type="text" class="form-control form-control-lg" id="Forename" name="Forename" 
                                placeholder="Enter your forename" required aria-label="Forename">
                        </div>
                        <div class="form-group mb-4">
                            <label for="FamilyName" class="form-label fw-bold text-primary">Family Name:</label>
                            <input type="text" class="form-control form-control-lg" id="FamilyName" name="FamilyName" 
                                placeholder="Enter your family name" required aria-label="Family Name">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateForm() {
            var forename = document.getElementById("Forename").value;
            var familyName = document.getElementById("FamilyName").value;

            if (!forename.trim() || !familyName.trim()) {
                alert("You cannot have blank fields!");
                return false;
            }
            return true;
        }
    </script>
}